<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ariel.boodal.Driver_Home">
    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgdriver"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvname"
            android:layout_below="@+id/imgdriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cak Mukidi"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvjobs"
            android:layout_below="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambal Ban SPesialist"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <Button
            android:layout_below="@+id/tvjobs"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbtnonline"
            android:text="Go Online"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iconuser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/customer"
            android:layout_toRightOf="@+id/iconuser"
            android:textSize="20sp"
            android:text="NIng Sudarmi"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/customerdesc"
            android:layout_below="@+id/customer"
            android:layout_toRightOf="@+id/iconuser"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Cak Tulung Ban ku Mbledos nang ngarepe kantor lurah"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/customerdesc"
            android:layout_toRightOf="@+id/iconuser"
            android:textSize="14sp"
            android:text="15 menit"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
